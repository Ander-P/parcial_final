<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeRecyclerViewFragment"
    android:orientation="vertical"
    >
    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <TextView
            android:layout_width="110dp"
            android:layout_height="45dp"
            android:layout_margin="10dp"
            android:background="@drawable/gradient_background"
            android:fontFamily="@font/marvel_font"
            android:padding="5dp"
            android:text="MARVEL"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/edt_search_character"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edt_search"
            android:hint="Name..." />

        <ImageButton
            android:id="@+id/btn_search_character"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitCenter"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/img"
             />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rcv_characters"
        android:background="@android:color/transparent"/>

</LinearLayout>